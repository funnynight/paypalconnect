{
  "extends": [
    "eslint:recommended",
    "prettier/babel",
    "prettier/flowtype",
    "prettier/unicorn"
  ],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "globals": {
    "page": "readonly"
  },
  "ignorePatterns": ["dist/*.js", "**/build/*"],
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "always"]
  }
}
